---
import ArchiveList from './ArchiveList.astro'
import CategoryCard from './CategoryCard.astro'
import ProfileCard from './ProfileCard.astro'
import TagCard from './TagCard.astro'

// Generic left sidebar wrapper. Accepts children via slot and optional class prop.
const {
  totalPosts,

  categories,
  tagCounts,
  postsByYear,
} = Astro.props
---

<div class="sticky top-6 space-y-6">
  <ProfileCard />
  <CategoryCard />
  <TagCard />
  <ArchiveList />
</div>
