---
import Header from '@/components/NonPost/Header.astro'
import config from 'urodele.config'
import '@/styles.css'
import Card from '../../components/Card.astro'
---

<script>
  import { mount } from '@/components/Editor'

  mount('#editor', '#editor-operations')
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <title>Editor - {config.head.title}</title>
  </head>
  <body>
    <Header />
    <div
      class="min-h-screen"
      style="background-color: var(--color-bg);"
    >
      <div class="w-full flex flex-col">
        <div
          class="editor-container w-full flex gap-4 justify-center px-4"
          data-modal-loading="true"
        >
          <!-- 编辑器主体 -->
          <Card class="flex-1 max-w-[960px]">
            <div
              id="editor"
              class="field-wrapper w-full flex flex-col"
            >
            </div>
          </Card>

          <!-- 右侧边栏：大纲和标签 -->
          <aside class="sidebar-wrapper w-60 max-lg:hidden">
            <div class="sticky top-6 flex flex-col gap-4">
              <!-- 大纲 -->
              <Card
                class="outline-panel max-h-[calc(50vh-60px)] overflow-y-auto"
              >
                <div class="mb-3">
                  <h3
                    class="text-sm font-semibold mb-2"
                    style="color: var(--color-title);"
                  >
                    文章大纲
                  </h3>
                </div>
                <div class="outline-list flex flex-col gap-1 text-sm"></div>
              </Card>

              <!-- 标签面板 -->
              <Card
                class="tag-panel p-4 rounded-lg max-h-[calc(50vh-60px)] overflow-y-auto"
              >
                <div class="mb-3">
                  <h3
                    class="text-sm font-semibold mb-2"
                    style="color: var(--color-title);"
                  >
                    文章标签
                  </h3>
                  <div
                    class="text-xs mb-2"
                    style="color: var(--color-t-l);"
                  >
                    使用 #标签 格式自动提取
                  </div>
                </div>
                <div class="tags-list flex flex-wrap gap-2"></div>
              </Card>
            </div>
          </aside>
        </div>
      </div>
    </div>
  </body>
</html>
