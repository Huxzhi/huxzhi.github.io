---
import NonPostLayout from '@/layouts/NonPostLayout.astro'
import Card from '@/components/NonPost/Card.astro'
import { getAllTags } from '@/pages/api/post/list'

const tags = (await getAllTags()).sort()
---

<NonPostLayout title="所有标签">
  <Card title="标签云">
    <div class="flex flex-wrap gap-4">
      {
        tags.map((tag) => (
          <a
            href={`/tag/${tag}`}
            class="text-2xl transition-colors"
            style="color: var(--color-t);"
            onmouseover="this.style.color='var(--color-link)'"
            onmouseout="this.style.color='var(--color-t)'"
          >
            #{decodeURIComponent(tag)}
          </a>
        ))
      }
    </div>
  </Card>
</NonPostLayout>
